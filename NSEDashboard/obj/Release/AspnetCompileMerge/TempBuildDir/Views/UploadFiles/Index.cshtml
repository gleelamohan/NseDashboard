
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NSEMasterPage.cshtml";
}



<div id="main" ng-app="app" ng-controller="Ctrl">
    <ol class="breadcrumb">
        <li><a href="#">Home</a></li>
        <li><a href="#">Upload Files</a></li>        
    </ol>
    <!-- //breadcrumb-->
    <div class="content">
        <div id="message" style="padding-top:5px;"></div>
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <h2><strong>Upload</strong> File</h2>

                </header>
                <div class="panel-body">
                    <form id="formID" class="form-horizontal" data-collabel="3" data-alignlabel="right" data-parsley-validate="">
                        <div class="form-group">
                            <label class="control-label col-md-3" style="text-align: left;">Upload Files</label>
                            <div class="row col-md-9">
                                <div class="col-md-6">
                                    <select class="form-control"  ng-model="countSelected" 
    ng-options="count as count.name for count in uploadType" >
                                     
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3" style="text-align: left;" for="exampleInputFile">File input</label>
                            <div class="row col-md-9">
                                <div class="col-md-6">
                                    @*<input type="file" id="exampleInputFile">*@
                                    <input type="text" class="form-control" ng-model="path" parsley-required="true" placeholder="Enter path C:/">
                                    @*<p class="help-block">some help text here.</p>*@
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3"  style="text-align: right;">Date Iso</label>
                            <div class="row col-md-9">
                                <div class="col-md-3">
                                    <input type="text" ng-model="enterdate" class="form-control parsley-validated" parsley-type="dateIso" parsley-required="true" placeholder="YYYY-MM-DD">
                                </div>
                            </div>
                        </div>

                        <div class="form-group offset">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn btn-theme" ng-click="SubmitForm();">Submit</button>
                                <button type="reset" class="btn" onclick="$( '#formID' ).parsley( 'destroy' )"> Reset form</button>
                            </div>
                        </div>
                    </form>
                </div>
            </section>







        </div>        
    </div>
</div>

